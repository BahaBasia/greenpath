<div class="tree-container">
  <div class="salutation">
    <h1 class="yay"><strong>Hooray!</strong></h1>
      <h3>Your toatal co2 saving: <span class="carbon_saved"><%= current_user.carbon_count.to_i %></span> kg!</h3>
  </div>
    <div class="tree-animation">
      <lottie-player
        id="tree-animation"
        src="<%= @tree %>"
        background="transparent"
        speed="1"
        style="width: 600px; height: 600px;"
        autoplay>
        </lottie-player>
    </div>
</div>
  <%# no tree %>
      <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
      <%# tree 1%>
      <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
      <%# tree 2 %>
