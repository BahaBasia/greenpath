<h1>Greenpath Ranking</h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>User</th>
      <th>Carbon Count Saved</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each.with_index(1) do |user, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= user.username %></td>
        <td><%= user.carbon_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
