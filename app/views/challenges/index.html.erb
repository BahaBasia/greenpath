
<div data-controller="carousel">
  <div class="categories-carousel <%= params[:category].blank? ? 'active' : '' %>">
    <%= link_to "All", challenges_path(), class: "category-filter-button" %>
  </div>
  <% @categories.each do |category| %>
    <div class="categories-container <%= params[:category] == category ? 'active' : '' %>">
      <%= link_to category, challenges_path(category: category), class: "category-filter-button" %>
    </div>
  <% end %>
</div>


  <h1>Challenges</h1>


  <div class="challenges-container">
    <% @challenges.each do |challenge| %>
      <div class="challenge-card">
        <div class="challenge-image">
          <%= image_tag "https://unsplash.com/photos/bJhT_8nbUA0", alt: "Challenge Image" %>
        </div>
        <div class="challenge-details">
          <h2 class="challenge-title"><%= challenge.name %></h2>
          <p class="challenge-description"><%= challenge.description %></p>
          <p class="carbon-footprint">Carbon Footprint: <%= challenge.saving_carbonamount %> kg CO2e</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
